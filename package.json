{
  "name": "chat",
  "version": "1.0.0",
  "description": "Just a simple chat written in Go!",
  "private": true,
  "scripts": {
    "dev": "npm run build && npm run watch",
    "clean": "rimraf public/scripts && rimraf public/styles && mkdirp public/scripts && mkdirp public/styles",
    "build": "npm run build:assets && npm run build:hashmark && npm run build:clean",
    "build:assets": "npm run clean && npm run build:css && npm run build:js",
    "build:css": "postcss source/styles/{login,chat}.css -d public/styles/",
    "build:js": "npm run build:js:vendor && npm run build:js:chat",
    "build:js:vendor": "concat-cli -f source/scripts/vendor/*.js -o public/scripts/vendor.js",
    "build:js:chat": "babel source/scripts/chat.js -o public/scripts/chat.js --source-maps inline",
    "build:hashmark": "hashmark -l 8 public/**/*.{css,js} '{dir}/{name}.{hash}{ext}' -m assets.json",
    "build:clean": "rimraf public/styles/{login,chat}.css && rimraf public/scripts/{vendor,chat}.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "parallelshell \"npm run watch:css\"  \"npm run watch:js\"",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "npm run build:js:chat -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonioVdlC/chat.git"
  },
  "keywords": [],
  "author": "Antonio Villagra De La Cruz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AntonioVdlC/chat/issues"
  },
  "homepage": "https://github.com/AntonioVdlC/chat#readme",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-babili": "^0.1.2",
    "babel-preset-es2015": "^6.24.1",
    "concat-cli": "^4.0.0",
    "cssnano": "^3.10.0",
    "hashmark": "^4.1.0",
    "mkdirp": "^0.5.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "rimraf": "^2.6.1"
  }
}
